<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="source.kevtimov.starwarsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/web_hi_res_512"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/web_hi_res_512"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.OptionsActivity" />
        <activity android:name=".activities.AboutActivity" />
        <activity android:name=".activities.MainChooseViewActivity" />
        <activity android:name=".activities.TheForceViewActivity" />
        <activity android:name=".activities.DarkSideViewActivity" />
        <activity android:name=".activities.MainCreateActivity" />
        <activity android:name=".activities.CreateDarkSideHeroActivity" />
        <activity android:name=".activities.CreateTheForceHeroActivity" />
        <activity android:name=".activities.ShowHeroActivity" />
        <activity android:name=".activities.AskYodaActivity" />
        <activity android:name=".activities.QuizActivity" />
        <activity android:name=".activities.LightsaberActivity"></activity>
    </application>

</manifest>