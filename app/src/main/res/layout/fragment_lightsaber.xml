<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LightsaberFragment">

    <source.kevtimov.starwarsapp.CustomLightsaberView
        android:id="@+id/customview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_lightsaberON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/md_green_A400"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="98dp"
        android:layout_marginEnd="35dp"
        android:text="ON" />

    <Button
        android:id="@+id/btn_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="28dp"
        android:text="Change" />

    <Button
        android:id="@+id/btn_lightsaberOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_lightsaberON"
        android:layout_marginBottom="39dp"
        android:text="OFF" />

</RelativeLayout>