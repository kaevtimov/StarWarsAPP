<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuizFragment">

    <ImageView
        android:id="@+id/iv_quiz_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="bg_image"
        android:scaleType="fitXY"
        android:src="@drawable/sky" />

    <ImageView
        android:id="@+id/iv_quiz_show"
        android:layout_width="249dp"
        android:layout_height="101dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="quiz_logo"
        android:src="@drawable/quiz_logo" />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/et_player_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="174dp"
        android:text="@string/player_name"
        android:textColor="@color/colorGold"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_player_name"
        android:layout_width="277dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/edit_text_style_3"
        android:hint="   Enter name:"
        android:textColorHint="@color/colorGrey" />

    <TextView
        android:id="@+id/tv_quiz_question"
        android:layout_width="318dp"
        android:layout_height="149dp"
        android:layout_alignBottom="@+id/tv_player_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_rect_text"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/round_button_quiz" />

    <Button
        android:id="@+id/btn_answer1"
        android:layout_width="208dp"
        android:layout_height="94dp"
        android:layout_alignBaseline="@+id/et_player_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_answer2"
        android:layout_width="203dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp" />

    <Button
        android:id="@+id/btn_answer3"
        android:layout_width="208dp"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />

    <TextView
        android:id="@+id/tv_quest_number"
        android:layout_width="63dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="-8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/iv_quiz_show" />

    <TextView
        android:id="@+id/tv_final_result"
        android:layout_width="327dp"
        android:layout_height="244dp"
        android:layout_below="@+id/iv_quiz_show"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_rect_text_2"
        android:gravity="center"
        android:textColor="@color/colorGold"
        android:textSize="25sp"
        android:textStyle="bold" />



</RelativeLayout>